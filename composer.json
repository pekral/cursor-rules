{
  "name": "pekral/cursor-rules",
  "description": "Cursor editor rules for PHP/Laravel projects",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.48.2",
    "laravel/pint": "^1.27.0",
    "pekral/phpcs-rules": "dev-master",
    "pekral/phpstan-rules": "dev-master",
    "pekral/rector-rules": "dev-master",
    "pestphp/pest": "^4.3.1",
    "pestphp/pest-plugin": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan": "^2.1.37",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "phpstan/phpstan-mockery": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0.12",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^4.0.1"
  },
  "autoload": {
    "psr-4": {
      "Pekral\\CursorRules\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/cursor-rules"
  ],
  "archive": {
    "exclude": [
      "/tests"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "cursor-rules": {
      "source": "vendor/pekral/cursor-rules/.cursor/rules",
      "target": ".cursor/rules"
    }
  },
  "scripts": {
    "analyse": [
      "echo \"ğŸ” Running PHPStan static analysis...\"",
      "vendor/bin/phpstan analyse --memory-limit=2G"
    ],
    "build": [
      "@fix",
      "@check"
    ],
    "check": [
      "echo \"ğŸš€ Running full quality check...\"",
      "@composer-normalize-check",
      "@phpcs-check",
      "@pint-check",
      "@rector-check",
      "@analyse",
      "@security-audit",
      "@test:coverage"
    ],
    "composer-normalize-check": [
      "echo \"ğŸ“ Checking Composer normalize...\"",
      "composer normalize --dry-run"
    ],
    "composer-normalize-fix": [
      "echo \"ğŸ“ Running Composer normalize fix...\"",
      "composer normalize || true"
    ],
    "coverage": [
      "echo \"ğŸ“Š Running code coverage analysis...\"",
      "@test:coverage"
    ],
    "fix": [
      "echo \"ğŸ”§ Running all fixes...\"",
      "@composer-normalize-fix",
      "@rector-fix",
      "@pint-fix",
      "@phpcs-fix",
      "echo \"âœ… All fixes completed!\""
    ],
    "phpcs-check": [
      "echo \"âœ… Running PHP CodeSniffer check...\"",
      "vendor/bin/phpcs --standard=ruleset.xml src/ tests/"
    ],
    "phpcs-fix": [
      "echo \"ğŸ”§ Running PHP CodeSniffer fix...\"",
      "vendor/bin/phpcbf --standard=ruleset.xml src/ tests/ || true"
    ],
    "pint-check": [
      "echo \"ğŸ¨ Running Laravel Pint check...\"",
      "vendor/bin/pint src/ tests/ --test"
    ],
    "pint-fix": [
      "echo \"ğŸ¨ Running Laravel Pint fixes...\"",
      "vendor/bin/pint src/ tests/"
    ],
    "rector-check": [
      "echo \"ğŸ”„ Running Rector check (dry-run)...\"",
      "vendor/bin/rector process --dry-run"
    ],
    "rector-fix": [
      "echo \"ğŸ”„ Running Rector fixes...\"",
      "vendor/bin/rector process"
    ],
    "security-audit": [
      "echo \"ğŸ”’ Running Composer security audit...\"",
      "composer audit --format=summary"
    ],
    "test:coverage": [
      "echo \"ğŸ“Š Running coverage tests with PCOV...\"",
      "php -dpcov.enabled=1 -dpcov.directory=src -dpcov.exclude=tests -dxdebug.mode=off vendor/bin/pest --coverage tests --min=100"
    ]
  }
}
